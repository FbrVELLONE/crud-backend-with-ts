{
  "openapi": "3.0.0",
  "info": {
    "title": "Ioasys CRUD-API Documentation",
    "description": "Contain every route disponible in this API",
    "version": "1.0.0",
    "contacts": "fabriciovellone@gmail.com"
  },
  "paths": {
    "/sessions": {
      "post": {
        "summary": "Create a connect session for an user",
        "description": "Login with your credentials",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "email": "fabriciovellone@gmail.com",
                "password": "1234"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfull"
          },
          "400": {
            "description": "Email or password incorrects!"
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Create an User",
        "description": "Create a new User in the DB",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "full_name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "birth_date": {
                    "type": "string"
                  },
                  "state": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  },
                  "education": {
                    "type": "string",
                    "enum": ["infantil", "fundamental", "medio", "superior", "pos_graducao", "mestrado", "doutorado"]
                  }
                }
              },
              "example": {
                "full_name": "Fabricio Vellone",
                "email": "fabriciovellone@gmail.com",
                "password": "1234",
                "birth_date": "17/09/1996",
                "state": "Sao Paulo",
                "city": "Monte Alto",
                "education": "mestrado"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Email already exists!"
          },
          "500": {
            "description": "Unhandled error in creation"
          }
        }
      }
    },
    "/users/{id}": {
      "delete": {
        "tags": ["User"],
        "summary": "Delete an User",
        "description": "Delete an User in the DB",
        "responses": {
          "200": {
            "description": "Successfull"
          },
          "400": {
            "description": "User not found!"
          },
          "401": {
            "description": "Token missing!"
          }
        }
      }
    }
  }
}
