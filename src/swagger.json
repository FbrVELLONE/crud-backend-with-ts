{
  "openapi": "3.0.0",
  "info": {
    "title": "Ioasys CRUD-API Documentation",
    "description": "Contain every route disponible in this API",
    "version": "1.0.0",
    "contacts": "fabriciovellone@gmail.com"
  },
  "paths": {
    "/sessions": {
      "post": {
        "summary": "Create a connect session for an user",
        "description": "Login with your credentials",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "email": "fabriciovellone@gmail.com",
                "password": "1234"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfull"
          },
          "400": {
            "description": "Email or password incorrects!"
          },
          "500": {
            "description": "Unhandled error in creation"
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Create an User",
        "description": "Create a new User in the DB",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "full_name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "birth_date": {
                    "type": "string"
                  },
                  "state": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  },
                  "education": {
                    "type": "string",
                    "enum": ["infantil", "fundamental", "medio", "superior", "pos_graducao", "mestrado", "doutorado"]
                  }
                }
              },
              "example": {
                "full_name": "Fabricio Vellone",
                "email": "fabriciovellone@gmail.com",
                "password": "1234",
                "birth_date": "17/09/1996",
                "state": "Sao Paulo",
                "city": "Monte Alto",
                "education": "mestrado"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Email already exists!"
          },
          "500": {
            "description": "Unhandled error in creation"
          }
        }
      },
      "get": {
        "tags": ["User"],
        "summary": "Get all Users",
        "description": "List all current Users in the DB",
        "responses": {
          "200": {
            "description": "Successfull",
            "content": {
              "application/json": {
                "example": [
                  {
                    "id": 33,
                    "full_name": "Fabricio Vellone",
                    "email": "fabriciovellone1@gmail.com",
                    "password": "$2b$08$aDhkgpr6/r8e1S.Hs.W5ROkXeNgVQLLWgPTE3SGJCU8LBsw.HIxNK",
                    "birth_date": "17/09/1996",
                    "state": "Sao Paulo",
                    "city": "Monte Alto",
                    "education": "mestrado",
                    "isAdmin": false,
                    "created_at": "2021-08-30T23:57:53.685Z"
                  },
                  {
                    "id": 34,
                    "full_name": "Fabricio Vellone",
                    "email": "fabriciovellone2@gmail.com",
                    "password": "$2b$08$8oB7swGeX7tpl7wy/up/TOPLD7On7DR3DwVmG/BSxFlHUO64FCOZa",
                    "birth_date": "17/09/1996",
                    "state": "Sao Paulo",
                    "city": "Monte Alto",
                    "education": "mestrado",
                    "isAdmin": false,
                    "created_at": "2021-08-30T23:57:56.118Z"
                  },
                  {
                    "id": 31,
                    "full_name": "Fabricio Vellone",
                    "email": "fabriciovellone@gmail.com",
                    "password": "$2b$08$ZVtm.ada00OGhQb5dzcAG.J/PGBL/eb7OQ.aKJWz5k7pCeZxPHSJS",
                    "birth_date": "17/09/1996",
                    "state": "Sao Paulo",
                    "city": "Monte Alto",
                    "education": "mestrado",
                    "isAdmin": true,
                    "created_at": "2021-08-30T23:41:10.589Z"
                  }
                ]
              }
            }
          },
          "401": {
            "description": "Token missing!"
          },
          "403": {
            "description": "You don't have permission"
          },
          "500": {
            "description": "Unhandled error in creation"
          }
        }
      }
    },
    "/users/{id}": {
      "delete": {
        "tags": ["User"],
        "summary": "Delete an User",
        "description": "Delete an User in the DB",
        "responses": {
          "200": {
            "description": "Successfull"
          },
          "400": {
            "description": "User not found!"
          },
          "401": {
            "description": "Token missing!"
          }
        }
      }
    }
  }
}
