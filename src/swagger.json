                      "password": "$2b$08$ZVtm.ada00OGhQb5dzcAG.J/PGBL/eb7OQ.aKJWz5k7pCeZxPHSJS",
                      "birth_date": "17/09/1996",
                      "state": "Sao Paulo",
                      "city": "Monte Alto",
                      "education": "mestrado",
                      "isAdmin": true,
                      "created_at": "2021-08-30T23:41:10.589Z"
                    }
                  ]
                }
              }
            },
            "401": {
              "description": "Token missing!"
            },
            "403": {
              "description": "You don't have permission"
            },
            "500": {
              "description": "Unhandled error in creation"
            }
          }
      }
    },
    "/companies": {
      "post": {
        "tags": ["Company"],
        "summary": "Create a Company",
        "description": "Create a new Company in the DB",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "area": {
                    "type": "string"
                  },
                  "creation_date": {
                    "type": "date"
                  },
                  "description": {
                    "type": "string"
                  },
                  "director": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "name": "Engheiros SA",
                "area": "Engenharia",
                "creation_date": "12-09-2020",
                "description": "setor de eng civil",
                "director": "Roberval Almeida"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Company's name already exists!"
          },
          "500": {
            "description": "Unhandled error in creation"
          }
        }
      },
